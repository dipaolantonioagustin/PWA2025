@model _Carrito

@{
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:100hv;">

    <div class="text-center p-5 shadow rounded" style="max-widht:1000px; width:500px;">
        <h2 class="mb-4 fw-bold">Total a Pagar</h2>
        <h1 class="display-4 text-success mb-4 fw-bold">$@Model.CalculadorTotal()</h1>

        <form asp-action="FinalizaCompra" asp-controller="Carrito" method="post" required>

            <div class="mb-3">

                <select class="form-select" name="medioPago">

                    <option value="">Seleccionar Medio de Pago</option>
                    <option value="credito">Tarjeta Crédito</option>
                    <option value="debito">Tarjeta Débito</option>


                </select>
            </div>
            <div class="mb-3">

                <select class="form-select mb-3" name="tarjetaEmpresa">

                    <option value="">Seleccionar Empresa</option>
                    <option value="visa">Visa</option>
                    <option value="mastarCard">Master Card</option>
                    <option value="americanExpress">American Express</option>


                </select>

            </div>
            <div class="mb-3">

                <input type="number" name="numeroTarjeta" class="form-control" value="" placeholder="Número Tarjeta"  required/>

            </div>
                    <div class="mb-3">

                        <input type="password" name="clave" class="form-control" value="" placeholder="Clave" required />

                    </div>

            <button type="submit" class="btn btn-primary w-100">Confirmar</button>

        </form>

    </div>



</div>
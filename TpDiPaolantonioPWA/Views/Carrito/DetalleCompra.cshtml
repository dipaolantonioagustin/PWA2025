@using System.Text.Json;

@model Carrito

@{

    var carritoJson = JsonSerializer.Serialize(Model);
}


<div class="container-fluid mb-5 pb-5 ">
    <div class="container-fluid py-0 my-0">
        <img src="~/img/Eventos/encabezado muestra permanente.jpg" style="width:100%;" alt="Alternate Text" />
    </div>


    <div class="container-fluid mt-1 mt-lg-3">
        <h2 class="fw-bold">Carrito Compras</h2>

        <div class="row">

            <div class="col-12 mt-lg-2 mt-1">
                <table class="table table-striped table-hover text-center align-middle">
                    <thead class="table-warning fw-bold fuente_Cabecera_PreView">
                        <tr>
                            <th>Evento</th>
                            <th>Fecha</th>
                            <th>Precio Ticket</th>
                            <th>Cantidad</th>
                            <th>Total Entradas</th>
                           


                        </tr>

                    <tbody class="fuente_tabla_CompraDetalle">
                            @foreach (var ticket in Model.tickets)
                            {
                            <tr>
                                <td>@ticket.evento_ticket.name</td>
                                <td>@ticket.fecha.ToString("dd/MM/yyyy")</td>
                                <td>@ticket.evento_ticket.valor</td>
                                <td>@ticket.cantidad</td>
                                <td>@ticket.TotalEntradas()</td>
                               
                            </tr>
                            }
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>SubTotal:</td>
                                <td>@Model.sumarEntradas()</td>
                            </tr>

                            <tr>
                                <td colspan="3">

                                <form asp-controller="Carrito" asp-action="CalcularDescuento" method="post">

                                    <div class="mb-3">

                                        <label class="form-label fw-bold"> ¿Perteneces a Amigos del Malba? </label>
                                        <input type="radio" id="socio" name="socio" value="true" @(Model.usuario.socio == true ? "checked" : "")/>
                                        <label for="socio">Sí</label>

                                        <input type="radio" id="socioNo" name="socio" value="false" @(Model.usuario.socio == false ? "checked" : "") />
                                        <label for="socioNo">No</label>

                                        <input type="hidden" name="carritoJson" value='@carritoJson' />
                                        <input type="hidden" name="importe" value=@Model.sumarEntradas() />


                                        <button type="submit" class="btn btn-warning btn-sm ms-3">Aplicar</button>

                                    </div>


                                </form>

                                </td>
                                
                                    <td>Descuentos Aplicados:</td>
                                    <td>@Model.descuentos</td>

                                </tr>

                                <tr>
                                   
                                    <td colspan="3"></td>
                                    <td>Gastos operativos:</td>
                                    
                                    <td>@Model.gastos_aderidos</td>

                                 </tr>

                                <tr>

                                    <td colspan="3"></td>
                                    <td>Total Final:</td>
                                    <td>@Model.CalculadorTotal()</td>

                                </tr>
                                   





                           
                           
                    </tbody>


                </table>


            </div>
            <div class="col-12 d-flex justify-content-between">

                <a type="button" class="btn btn-info fw-bold ancho_botones_CompraDetalle" asp-area="" asp-controller="Carrito" asp-action="Index">Volver</a>
                <a type="button" class="btn btn-warning fw-bold ancho_botones_CompraDetalle" asp-area="" asp-controller="Carrito" asp-action="ConfirmarCompra">Continuar</a>

            </div>



        </div>





    </div>




</div>
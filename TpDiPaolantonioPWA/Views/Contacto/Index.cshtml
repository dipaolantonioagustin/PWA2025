@{

    string mensaje = TempData["Mensaje"] as string;
    string verificador = TempData["verificador"] as string;
    string mensajeAccesorio = "Algo Salió Mal";

}


@if (mensaje != null && verificador == "true")
{
    <div class="alert alert-success">
        <strong>Éxito</strong> @mensaje;


    </div>

}
else if (mensaje != null && verificador == "false")
{
    <div class="alert alert-danger">
        <strong>Error</strong> @mensaje;
    </div>
}



<div class="container-fluid  p-0 mb-3">
    
    <div class="w-100 ">
        <img src="~/img/Contacto/Escritura.jpg" style="width:100%;" alt="Alternate Text" />
    </div>
   
    
    <div class=" container w-100 bg-warning rounded-2 d-block justify-content-center align-content-center mt-2 mt-lg-4 p-3 p-lg-5 mb-3 mb-lg-5" style="max-width:900px;">
        <div class="w-25 mb-3 ">
            <img src="~/img/Museo_malba_logo.png" style="width:100%;" alt="Alternate Text" />
        </div>
        <form asp-controller="Contacto" asp-action="RecibirMensaje" method="post" class="w-100">

            
                <div class="mb-3">

                    <label class="form-label fw-bold d-block w-100 " style="color:black;">Usuario E-Mail</label>
                <input class="rounded-1 ancho_inputs_Contacto" type="text" name="mail" value="" placeholder="Referencia de Contacto" required />

                </div>
            

            
                <div class="mb-3">

                    <label class=" form-label fw-bold d-block" style="color:black;">Asunto</label>
                     <input class="rounded-1 ancho_inputs_Contacto" type="text" name="asunto" value="" placeholder="Referencia Breve" required />

                </div>
            
            
                <div class="mb-3">

                        <label class="form-label fw-bold d-block" style="color:black;">Mensaje</label>
                        <textarea class="form-control" rows=5  name="mensaje" value="" placeholder="Escriba Aquí su mensajes" required></textarea>
         

                </div>

                <button type="submit" class="btn btn-primary w-25">Enviar</button>
        </form>
    </div>
  
</div>


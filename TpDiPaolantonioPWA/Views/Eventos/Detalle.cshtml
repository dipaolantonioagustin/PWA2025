@using System.Text.Json
@{
    string Resultado = TempData["Key"] as string;
    string Mensaje = TempData["Mensaje"] as String;
    
}

@model Evento

@if (Mensaje != null && Resultado == "true")
{
    <div class="alert alert-success">
        <strong>Éxito</strong> @Mensaje ;


    </div>

}
else if (Mensaje != null && Resultado == "false")
{
    <div class="alert alert-danger">
        <strong>Error</strong> @Mensaje;


    </div>
}

<h2>@Model.autor</h2>

@Html.Partial("_Detalle", Model)

<form asp-controller="Eventos" asp-action="Agregar" method="post">
    <input type="hidden" name="e" value=@Model.id />
    <div class="mb-2">
        <label for="cantidad">Cantidad de tickets:</label>
        <input type="number" name="cantidad" value="1" min="1" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Agregar al Carrito</button>
</form>


<div style="height: 100px;"></div>
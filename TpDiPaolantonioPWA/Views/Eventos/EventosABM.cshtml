@{
}

@model IEnumerable<Evento>

<div class="container-fluid mb-5 pb-5 ">
    <div class="container-fluid py-0 my-0">
        <img src="~/img/Eventos/encabezado muestra permanente.jpg" style="width:100%;" alt="Alternate Text" />
    </div>


    <div class="container-fluid mt-1 mt-lg-3">
        <h2 class="fw-bold">Eventos Vigentes</h2>

        <div class="row">

            <div class="col-12 mt-lg-2 mt-1">
                <table class="table table-striped table-hover text-center align-middle">
                    <thead class="table-warning fw-bold fuente_Cabecera_PreView">
                        <tr>
                            <th>Evento</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Precio Ticket</th>
                            <th>Foro</th>
                            <th>Tipo</th>
                            <th>Autor</th>
                            <th>Selección</th>



                        </tr>

                    <tbody class="fuente_tabla_CompraDetalle">
                            @foreach (var e in Model)
                            {
                             <form asp-controller="Eventos" asp-action="Procesos">
                                <tr>
                                    <td>@e.name</td>
                                    <td>@e.fechaInicio.ToString("dd/MM/yyyy")</td>
                                    <td>@e.fechaFin.ToString("dd/MM/yyyy")</td>
                                    <td>@e.valor</td>
                                    <td>@e.foro</td>
                                    <td>@e.tipo</td>
                                    <td>@e.autor</td>
                                    <td>
                                       
                                        
                                    
                                    
                                    </td>

                                

                                </tr>
                            </form>
                            }
                       






                    </tbody>


                </table>


            </div>
            <div class="col-12 d-flex justify-content-center">

                <a type="button" class="btn btn-info fw-bold ancho_botones_CompraDetalle m-3" asp-area="" asp-controller="Carrito" asp-action="Index">Alta</a>
                <a type="button" class="btn btn-warning fw-bold ancho_botones_CompraDetalle m-3" asp-area="" asp-controller="Carrito" asp-action="Privacy">Baja</a>
                <a type="button" class="btn btn-warning fw-bold ancho_botones_CompraDetalle m-3" asp-area="" asp-controller="Carrito" asp-action="Privacy">Modificacion</a>

            </div>



        </div>





    </div>




</div>


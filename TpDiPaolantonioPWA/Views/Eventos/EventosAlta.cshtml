@{
}

@model _Eventos

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow rounded-2">
               
                <div class="card-body p-4">
                    <form asp-action="AgregarEvento" asp-controller="Eventos" method="post">
                        <div class="mb-3">
                            <label asp-for="name" class="form-label">Nombre del Evento</label>
                            <input asp-for="name" class="form-control" required/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="description" class="form-label">Descripción</label>
                            <textarea asp-for="description" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="fechaInicio" class="form-label">Fecha de Inicio</label>
                            <input asp-for="fechaInicio" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="fechaFin" class="form-label">Fecha de Fin</label>
                            <input asp-for="fechaFin" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="sala" class="form-label">Sala</label>
                            <input asp-for="sala" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="autor" class="form-label">Autor</label>
                            <input asp-for="autor" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="foro" class="form-label">Foro</label>
                            <input asp-for="foro" class="form-control" required />
                        </div>


                        <div class="mb-3">
                            <label asp-for="tipo" class="form-label">Tipo</label>
                            <input asp-for="tipo" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="valor" class="form-label">Valor ($)</label>
                            <input asp-for="valor" type="number" step="0.01" class="form-control" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
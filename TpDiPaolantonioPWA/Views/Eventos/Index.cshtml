@{

    ViewData["Title"] = "Eventos Page";
}
<div class="container-fluid mb-5 pb-5 ">
    <div class="container-fluid">
        <img src="~/img/Eventos/encabezado muestra permanente.jpg" style="width:100%;" alt="Alternate Text" />
    </div>
    <div id="contenedorEventos" class="container d-flex flex-wrap my-1 my-md-5 justify-content-between">

    </div>
    
 </div>



  <script>

    let eventos = [["titulo", "Autor", "fecha", "sala", "descripción", "/img/Eventos/Kuitca.png"]];
      const contenedor = document.getElementById("contenedorEventos");
      
      document.addEventListener("DOMContentLoaded", function () {
      
          cargaEventos();
      
      });

      function cargaEventos() {

        eventos.forEach(evento => {
            const col = document.createElement("div");
            col.className = "col-12 col-md-4";

            col.innerHTML = `
                                <div class=""card col-12 col-md-3 rounded-2 my-3 my-md-0" style="border-radius: 15px 0 0 15px; box-shadow: 0 5px 5px 0 gray">
                                    <h3 class="card-title fw-bold">${evento[0]}</h3>
                                    <h4 class="card-title fw-bold">${evento[1]}</h5>
                                <img src="${evento[5]}" class="card-img-top" alt="Alternate Text" />
                                <div class="card-body">
                                    <h5 class="card-title fw-bold">${evento[3]}</h5>
                                    <p class="card-text">${evento[4]}</p>
                                    <p class="text-muted">${evento[2]}</p>
                                </div>
                                </div>`;


            contenedor.appendChild(col);

        })

      }
     



  </script>
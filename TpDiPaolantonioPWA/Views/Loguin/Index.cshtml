@{

    string AlertaMensaje = TempData["AlertMensaje"] as String;
    string Resultado = TempData["Key"] as string;
}

@if (AlertaMensaje != null && Resultado == "true")
{
    <div class="alert alert-success">
        <strong>Éxito</strong> @AlertaMensaje;


    </div>

}
else if (AlertaMensaje != null && Resultado == "false")
{
    <div class="alert alert-danger">
        <strong>Error</strong> @AlertaMensaje;


    </div>
}

<div class="container d-flex justify-content-center align-items-center mt-2" style="min-height:100px;">

    <div class="text-center p-5 shadow rounded" style="width:500px;">
        <img src="~/img/Museo_malba_logo.png" class="mb-5"style="max-width:250px "alt="Alternate Text" />
        <form asp-controller="Loguin" asp-action="Logueo" method="post" class="justify-content-between">
            <div class="row">
                <div class="col-11 mb-3">
                    <input type="text" name="email" class="form-control" value="" placeholder="e-mail Usuario" required />

                </div>

                <div class="col-1 mb-3">
                    <i class="bi bi-envelope"></i>

                </div>

            </div>
            
            <div class="row mb-3">
               
                <div class="col-11 mb-3">
                    <input type="password" name="clave" class="form-control" value="" placeholder="Clave" required />
                </div>

                <div class="col-1 mb-3">
                    <i class="bi bi-key-fill"></i>

                </div>

               
            </div>
            

                <button type="submit" class="btn btn-primary w-100">Confirmar</button>

            

           

   
        </form>
    
    </div>
</div>
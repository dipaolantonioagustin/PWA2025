@{
}

@model Eventos
<div class="container-fluid p-2">

    <div class="card mb-3">
        <div class="card-header fw-bold">@Model.name</div>
        <img src="@Model.portada" class="card-img-top" alt="Alternate Text" />
        <div class="card-body mb-2">
            <p><strong>Fecha:</strong> @Model.fechaInicio.ToString("dd/MM/yyyy")</p>
            <p><strong>Fecha:</strong> @Model.fechaFin.ToString("dd/MM/yyyy")</p>
            <p><strong>Descripción:</strong> @Model.description</p>
            <p><strong>Ubicación:</strong> @Model.foro</p>
            <p><strong>Ubicación:</strong> @Model.DescripcionDetallada</p>
        </div>
    </div>

</div>




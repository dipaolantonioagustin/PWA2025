<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TpDiPaolantonioPWA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TpDiPaolantonioPWA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid bg-warning fuente_Cabecera ">
                <a class="navbar-brand m-3" asp-area="" asp-controller="Home" asp-action="Index">
                    
                    <img src="~/img/Museo_malba_logo.png" class="logo_layout" alt="Alternate Text" />
                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse bg-warning d-sm-inline-flex justify-content-between navbar-collapseFrente">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3" href="@Url.Action("Index", "Info", new { info = 1 })">Historia</a>
                        </li>
                        <li class="nav-item">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3"  asp-area="" asp-controller="Eventos" asp-action="Index">Eventos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3" asp-area="" asp-controller="Eventos" asp-action="EventosABM">EventosABM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3"  asp-area="" asp-controller="Carrito" asp-action="Index" >Tickets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3" asp-area="" asp-controller="MuestraPermanente" asp-action="Index"> M.Permanente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3" asp-area="" asp-controller="Contacto" asp-action="Index">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3" asp-area="" asp-controller="Carrito" asp-action="DetalleCompra"> <i class="bi bi-cart-fill"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold fs-3" asp-area="" asp-controller="Loguin" asp-action="Index"> <i class="bi bi-person-circle"></i></a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid mb-3">
        <main role="main" class="pb-3 mb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
       
        <div class="container-fluid p-0">

            <div class="row align-items-center justify-content-center py-0 px-1">

               
                <div class="col-md-3 m-1 d-none d-md-flex justify-content-center">

                    <img src="~/img/logomalbapiepagina.png" class="img-fluid  p-2 " style="max-height: 120px;" alt="Alternate Text">

                </div>

                <div class="col-md-4 text-center d-flex flex-column justify-content-center align-items-center text-center">
                   
                    <div style="max-width: 300px;">

                        <address class="mb-1" style="line-height: 1.3;  text-align: center;">Av. Figueroa Alcorta 3415 </address>
                        <address class="mb-1" style="line-height: 1.3;  text-align: center;">C1425CLA Buenos Aires, Argentina</address>
                        <address class="mb-0" style="line-height: 1.3;  text-align: center;">Contacto +54 11 4808 6500</address>

                    </div>
                   

                </div>

                <div class="col-12 col-md-3 m-md-1 m-1 d-none d-md-flex align-items-center">

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3285.094377083212!2d-58.40487858305018!3d-34.57647845248277!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb564f74f69c3%3A0xeea87be2795e86d2!2sMuseo%20de%20Arte%20Latinoamericano%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1727714458718!5m2!1ses!2sar" width="100%" height="100" style="border:0; max-width: 100%;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                </div>

            </div>

        </div>
        
        
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
